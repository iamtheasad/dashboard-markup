{% set base = "../" %}
{% extends "layouts/layout.njk" %}

{% block content %}
<div class="user-wrapper">
   <h2 class="fz24 fw-500 mb-3">ShareTrip: Save Travel Repeat</h2>

   <p class="fz14 fw-500 mb-2 mb-4 influ-active">Active</p>
   <p class="fz12 fw-500 mb-2 mb-4 influ-accepted">Accepted by Influencer</p>
</div>

<div class="row mt-2 pb-3 pb-md-5">
   <div class="col-md-6">
      <h3 class="fz12 fw-400 mb-2">Influencer</h3>

      <div class="radio-group pr-3 pl-3 pb-2 pt-2 ra-border border-radius-8 influenc-radio-group mb-md-4 mb-3">
         <div class="rs-checkbox d-flex align-items-center">
            <input type="checkbox" name="" class="rs-checkbox-input" id="influencer-1">
            
            {% include 'sections/influencer/influencerSelectedUserItem.njk' %}
         </div>
      </div>

      {% include 'sections/influencer/influencerCampaignInfo.njk' %}

      <div class="d-flex justify-content-between mt-4 mt-md-5 mb-4 mb-md-5">
         <a href="influencer/influencerAddTab.html" class="rs-btn rs-btn-secondary uppercase mr-3 fz16"><img
            src="assets/images/icons/edit.svg" class="influ-active-icon" alt="Icon"> Edit Campaign</a>

         <a href="influencer/influencersAccepted.html" class="rs-btn rs-btn-primary uppercase">Accept</a>
      </div>

      {% include 'sections/influencer/influencerBudgetForm.njk' %}
   </div>
   <div class="col-md-6">
      <h3 class="fz12 fw-400 mb-2">Comments</h3>
      <div class="ra-border p-1 p-md-3 border-radius-8">
      {% include 'sections/influencer/influencerUser.njk' %}

      {% include 'sections/influencer/influencerComment.njk' %}
      </div>
   </div>
</div>


{% endblock %}