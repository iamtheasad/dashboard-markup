{% extends "layouts/layout2.njk" %}

{% block content %}

<!-- Top Bar -->
<header class="topbar topbar2 d-flex justify-content-between align-items-center">
   <div class="breadcumb fz16 fw-600">
      <div class="d-flex align-items-center">
         <a href="#" class="mr-20">
            <img src="assets/images/icons/coolicon.svg" class="img long-arrow" alt="Arrow Icon">
         </a>
         <span class="pl-2 pr-3">My Deals</span>
      </div>
   </div>
   <div class="right-menu dropdown d-flex">
      {% include 'snippets/topBar2Right.njk' %}
   </div>
</header>


<div class="ra-gray-light-bg my-deals-wrapper">
   <ul class="nav d-flex justify-content-center nav-pills bg-transparent tab-wrapper" id="pills-tab" role="tablist">
      <li class="nav-item">
         <a class="nav-link ra-custom-nav-link rounded-0 active dot" id="request-tab" data-toggle="pill" href="#request"
            role="tab" aria-controls="request" aria-selected="true">Connect Requests (2)</a>
      </li>
      <li class="nav-item">
         <a class="nav-link ra-custom-nav-link rounded-0 dot" id="progress-tab" data-toggle="pill" href="#progress"
            role="tab" aria-controls="progress" aria-selected="false">In Progress (1)</a>
      </li>
      <li class="nav-item">
         <a class="nav-link ra-custom-nav-link rounded-0" id="approval-tab" data-toggle="pill" href="#approval"
            role="tab" aria-controls="approval" aria-selected="false">Pending Approval</a>
      </li>
      <li class="nav-item">
         <a class="nav-link ra-custom-nav-link rounded-0" id="cancelled-tab" data-toggle="pill" href="#cancelled"
            role="tab" aria-controls="cancelled" aria-selected="false">Cancelled</a>
      </li>
   </ul>

   <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="request" role="tabpanel" aria-labelledby="request-tab">
         {% set data = {
         searchTitle : 'Search in Connect Requests'
         }%}
         <div class="ml-20 mr-20">
            {% include "snippets/searchBar.njk"%}
         </div>
         <div class="wrapper">
            {% include "sections/myDeals/connectRequestsDataTable.njk"%}
         </div>
      </div>
      <div class="tab-pane fade" id="progress" role="tabpanel" aria-labelledby="progress-tab">
         {% set data = {
         searchTitle : 'Search in In Progress'
         }%}
         <div class="ml-20 mr-20">
            {% include "snippets/searchBar.njk"%}
         </div>
         <div class="wrapper">
            {% include "sections/myDeals/inProgressDataTable.njk"%}
         </div>
      </div>
      <div class="tab-pane fade" id="approval" role="tabpanel" aria-labelledby="approval-tab">
         {% set data = {
         searchTitle : 'Search in Pending Approval'
         }%}
         <div class="ml-20 mr-20">
            {% include "snippets/searchBar.njk"%}
         </div>
         <div class="wrapper">
            {% include "sections/myDeals/pendingApproval.njk"%}
         </div>
      </div>
      <div class="tab-pane fade" id="cancelled" role="tabpanel" aria-labelledby="cancelled-tab">
         {% set data = {
         searchTitle : 'Search in Cancelled'
         }%}
         <div class="ml-20 mr-20">
            {% include "snippets/searchBar.njk"%}
         </div>
         <div class="wrapper">
            {% include "sections/myDeals/cancelled.njk"%}
         </div>
      </div>
   </div>
</div>
{% endblock %}