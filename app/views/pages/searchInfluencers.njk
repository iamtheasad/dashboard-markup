{% extends "layouts/layout.njk" %}

{% block content %}

<div class="row">
   <div class="col-md-12">
      <ul class="list-unstyled multi-steps mt-1 mt-md-3 mb-md-5 mb-4">
         <li class="is-active">Search Influencer</li>
         <li>Select Influencer</li>
         <li>Details</li>
         <li>Publish</li>
      </ul>
   </div>
</div> 

<div class="user-wrapper mt-4 mb-2 mb-md-4">
   <h2 class="fz24 fw-500 mb-1">Enter Influencer Criteria</h2>

   <p class="fz12 fw-400 gray-color">Lorem Ipsum is simply dummy text of the printing and typesetting industry</p>
</div>

<form action="">
   <div class="row">
      <div class="col-md-8">
         <fieldset class="rs-form mb-4 influInput">
            <label class="rs-label">Budget</label>
            <input type="text" class="rs-input fw-500 fz18">
         </fieldset>

         <fieldset class="rs-form mb-3">
            <p class="fz16 fw-500 pl-2 mb-1">Select Gender</p>
            <div class="d-flex align-items-center">
               <div class="radio-group mr-3">
                  <input type="radio" name="accType" id="male" class="radio-input" checked="">
                  <label for="male" class="radio-label">
                     <img src="assets/images/icons/man.svg" alt="Icon">
                     MALE
                  </label>
               </div>
               <div class="radio-group mr-3">
                  <input type="radio" name="accType" id="female" class="radio-input">
                  <label for="female" class="radio-label">
                     <img src="assets/images/icons/female.svg" alt="Icon">
                     FEMALE
                  </label>
               </div>
               <div class="radio-group">
                  <input type="radio" name="accType" id="all" class="radio-input">
                  <label for="all" class="radio-label">
                     <img src="assets/images/icons/users.png" alt="Icon">
                     ALL
                  </label>
               </div>
            </div>
         </fieldset>

         <div class="row">
            <div class="col-md-6">
               <fieldset class="rs-form mb-4">
                  <label for="editName" class="rs-label rs-select-editAccount">Select Media</label>
                  <select class="ra-select w-100 fw-500">
                     <option value="BFTN">Youtube</option>
                     <option value="BFTN">Facebook</option>
                     <option value="BFTN">Twitter</option>
                  </select>
               </fieldset>
            </div>

            <div class="col-md-6">
               <fieldset class="rs-form mb-4">
                  <label for="editName" class="rs-label rs-select-editAccount">Post Type</label>
                  <select class="ra-select w-100 fw-500">
                     <option value="BFTN">Select Social Media Post Type</option>
                     <option value="BFTN">Children</option>
                     <option value="BFTN">Adult</option>
                  </select>
               </fieldset>
            </div>
         </div>

         <div class="d-flex mt-3">
            <a href="selectInfluencers.html" type="submit" class="rs-btn rs-btn-primary rs-btn-lg uppercase mr-3">Search
               Influencer</a>
         </div>

         <div class="guide-line fw-500 mt-5">
            Need Help? Visit here <a href="#" class="ra-primary-color fw-700">Guideline</a>
         </div>
      </div>
   </div>
</form>

{% endblock %}