{% extends "layouts/layout.njk" %}

{% block content %}
<div class="d-card">
    <div class="user-wrapper pl-4">
        <h2 class="fz24 fw-500 mb-3">Add New Place for Advertise</h2>

        <p class="fz12 gray-color">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown.</p>

        <div class="user_btn mt-4">
            <a href="placeAddDetails.html" class="rs-btn rs-btn-lg rs-btn-primary uppercase fz20"><span class="mdi mdi-plus-thick"></span>
                Add
            </a>
        </div>
    </div>
</div>
<div class="ra-data-table-bg p-3 pt-5 radius_8 ra-property-list dashbaord-main">
    <div class="row">
        <div class="col-md-12">
            <div class="dataTable table-responsive">
                <div class="property-data-table-head d-flex flex-wrap justify-content-between align-items-center mb-2">
                    <h2 class="fw-500 fz24">List of Ad Places</h2>

                    <div class="propert-header-right d-flex flex-wrap">
                        <fieldset class="rs-form mr-2">
                            <select class="ra-select fw-700 fz16">
                                <option class="fz18 fw-500" value="bangladesh" selected>All Properties</option>
                                <option class="fz18 fw-500" value="saudi arabia">Saudi Arabia</option>
                                <option class="fz18 fw-500" value="us">Uinited State Of America</option>
                                <option class="fz18 fw-500" value="india">India</option>
                            </select>
                        </fieldset>
                        <form action="" class="rs-form">
                            <button type="submit" class="position-absolute ra-search-label" for="searchInput">
                                <img src="assets/images/icons/search.svg" alt="Search Icon">
                            </button>
                            <input type="search" class="rs-input pr-5" id="searchInput"
                                placeholder="enter ad place name">
                        </form>
                    </div>
                </div>

                {% include "snippets/placesDataTable.njk" %}
            </div>
        </div>
    </div>
</div>

{% endblock %}