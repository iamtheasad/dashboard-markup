<!-- Modal -->
<div class="modal fade" id="changePassword" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content changePasswordModal-content">
      <form action="">
        <div class="modal-header pt-5 border-bottom-0">
          <h5 class="modal-title" id="exampleModalLabel">Change Account Password</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span class="mdi mdi-close" aria-hidden="true"></span>
          </button>
        </div>
        <div class="modal-body pb-5">
          <div class="row">

            <div class="col-md-12">
              <fieldset class="rs-form mb-4 password-change">
                <label for="editName" class="rs-label">Enter Old Password</label>
                <input type="password" class="rs-input" value="123456">
                <span class="mdi mdi-eye"></span>
              </fieldset>
            </div>

            <div class="col-md-12">
              <fieldset class="rs-form mb-4 password-change">
                <label for="editName" class="rs-label">Enter New Password</label>
                <input type="password" class="rs-input" value="123456">
                <span class="mdi mdi-eye"></span>
                <!-- <span class="mdi mdi-eye-off"></span> -->
              </fieldset>
            </div>

          </div>
          <div class="d-flex mt-3">
            <button type="submit" class="rs-btn rs-btn-primary rs-btn-lg uppercase mr-3">Change Password</button>
  
            <button class="rs-btn rs-btn-primary rs-btn-lg uppercase" data-dismiss="modal">Cancel</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>