<div class="profile accountSettingSnippetBg mr-3 p-3">
   <div class="row">
      <div class="col-lg-5 col-md-12 d-flex justify-content-center">
         <div class="profile_image text-center">
            <div class="radius-50 flex-img mb-4">
               <img class="account_img " src="http://via.placeholder.com/200x200" alt="Account Holder Image">
            </div>
            <div class="upload-area">
               <input type="file" id="image_upload" class="d-none">
               <label class="rs-btn fz14 fw-700 rs-btn-trans uppercase" for="image_upload">Upload</label>
            </div>
         </div>
      </div>
      <div class="col-lg-7 col-md-12 pl-1">
         <h2 class="fz16 fw-700 mb-3">Account Name</h2>
         
         <div class="mb-2">
            <span class="fz16 mb-2">Email Address</span>
            <h4 class="fz12 fw-600">01234567890</h4>
         </div>
         <div class="mb-2">
            <span class="fz16 mb-2">Phone Number</span>
            <h4 class="fz12 fw-600">account@gmail.com</h4>
         </div>
         <div class="mb-2">
            <span class="fz16 mb-2">Address</span>
            <h4 class="fz12 fw-600">371/A, Block-D, Bashudhara R/A, Dhaka-1229</h4>
         </div>
         <div class="mb-2">
            <span class="fz16 mb-2">Country</span>
            <h4 class="fz12 fw-600">Bangladesh</h4>
         </div>

         <!-- Button trigger modal -->
         <div class="d-flex pt-4">
            <button type="button" class="rs-btn rs-btn-primary fz20 fw-700 rs-btn-lg uppercase" data-toggle="modal" data-target="#editAccountModal">
               Edit
            </button>
         </div>

         {% include 'snippets/modals/editAccountInfo.njk' %}
      </div>
   </div>
</div>