<div class="d-card mr-lg-3 mb-3">
   <div class="row">
      <div class="col-lg-3 col-md-12 col-sm-12 d-flex justify-content-center mb-md-5">
         <div class="profile_image text-center">
            <div class="profile-user">
               <label for="user_img">
                   <img src="assets/images/icons/user.svg" alt="User Image" />
               </label>
               <input type="submit" id="user_img" class="d-none">
           </div>
            <div class="mt-3">
               <input type="file" id="image_upload" class="d-none">
               <label class="rs-btn fz14 fw-700 rs-btn-trans uppercase" for="image_upload">Upload</label>
            </div>
         </div>
      </div>
      <div class="col-lg-9 col-md-12 cl-sm-12 pl-1 ">
         <h2 class="fz28 fw-700 mb-3">Account Name</h2>
         
         <div class="mb-2">
            <span class="fz12 mb-2 gray-color">Email Address</span>
            <h4 class="fz16 fw-400">01234567890</h4>
         </div>
         <div class="mb-2">
            <span class="fz12 mb-2 gray-color">Phone Number</span>
            <h4 class="fz16 fw-400">account@gmail.com</h4>
         </div>
         <div class="mb-2">
            <span class="fz12 mb-2 gray-color">Address</span>
            <h4 class="fz16 fw-400">371/A, Block-D, Bashudhara R/A, Dhaka-1229</h4>
         </div>
         <div class="mb-2">
            <span class="fz12 mb-2 gray-color">Country</span>
            <h4 class="fz16 fw-400">Bangladesh</h4>
         </div>

         <!-- Button trigger modal -->
         <div class="d-flex pt-4">
            <button type="button" class="change_account_password_btn rs-btn rs-btn-primary fz20 fw-700 rs-btn-lg uppercase" data-toggle="modal" data-target="#editAccountModal">
               Edit
            </button>
         </div>

         {% include 'snippets/modals/editAccountInfo.njk' %}
      </div>
   </div>
</div>