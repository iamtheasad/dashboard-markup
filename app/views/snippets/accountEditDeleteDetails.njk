<div class="d-card d-md-flex flex-direction-md-column">
    <div class="user-wrapper">
        <div class="user_img">
            <label for="user_img">
                <img src="assets/images/icons/user.svg" alt="User Image" />
            </label>
            <input type="submit" id="user_img" class="d-none">
        </div>
    </div>
    <div class="user-wrapper pl-4">
        <h2 class="fz28 fw-700 mb-3">Account Name</h2>

        <div class="d-card mr-3 p-3">
            <div class="row">
                <div class="col-lg-12 pl-1 ">

                    <div class="mb-2">
                        <span class="gray-color fz12 fw-400 mb-2">Email Address</span>
                        <h4 class="fz16 fw-400 mb-2">account@email.com</h4>
                    </div>
                    <div class="mb-2">
                        <span class="gray-color fz12 fw-400 mb-2">Property</span>
                        <h4 class="fz16 fw-400 mb-2">Property Name</h4>
                    </div>
                    <div class="mb-2">
                        <span class="gray-color fz12 fw-400 mb-2">Access Type</span>
                        <h4 class="fz16 fw-400 mb-2">Read & Manage</h4>
                    </div>
                </div>
            </div>
            <div class="user_btn mt-4">
                <button type="button"
                    class="change_account_password_btn rs-btn rs-btn-primary fz20 fw-700 rs-btn-lg uppercase"
                    data-toggle="modal" data-target="#addNewUserModal">
                    Edit
                </button>
                <button class="rs-btn rs-btn-lg rs-btn-secondary uppercase rs-btn-trans ra-custom-bg fz20">Delete</button>
            </div>

            {% include 'snippets/modals/addUserModal.njk' %}
        </div>
    </div>
</div>