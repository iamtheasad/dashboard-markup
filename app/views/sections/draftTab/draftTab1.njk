<div class="draft-brand-tag">
   <h3 class="fz14 fw-600 black-color mb-12">What do you want to Promote?</h3>
   <div class="promotion-tag">
      {%
      set promuteItems = [
      { name: "Brand" },
      { name: "Campaign" },
      { name: "Event" },
      { name: "Movie" },
      { name: "Product" },
      { name: "Service" },
      { name: "Hotel" },
      { name: "Restaurant" }
      ]
      %}
      {% for item in promuteItems %}
      <div class="btn-checkbox">
         <input type="radio" name="promotionOptions" id="promoteTag_{{ loop.index }}" class="d-none btn-checkbox-input">
         <label class="btn-checkbox-label" for="promoteTag_{{ loop.index }}">{{ item.name }}</label>
      </div>
      {% endfor %}
   </div>
</div>

<div class="promotion-start-form">
   <h3 class="fz14 fw-600 black-color mb-12">When do you want to start the Promotion?</h3>
   <div class="promotion-input">
      <div class="row">

         <div class="col-md-6">
            <div class="input-group custom-date-time rs-form mb-20">
               <label class="fz14 fw-400 gray-light-text-color rs-label" for="promotionInputDate">Select date</label>
               <input type="date" class="form-control custom-form-control rs-input" id="promotionInputDate">
            </div>
         </div>

         <div class="col-md-6">
            <div class="input-group custom-date-time rs-form mb-20">
               <label class="fz14 fw-400 gray-light-text-color rs-label" for="promotionInputTime">Select Time</label>
               <input type="time" class="form-control custom-form-control rs-input" id="promotionInputTime">
            </div>
         </div>
      </div>
   </div>
</div>

<div class="brief">
   <h3 class="fz14 fw-600 black-color mb-12">Brief a short brief on your Promotion</h3>

   <div class="brief-content">
      <textarea class="fz14 fw-400" name="brief" id="briefText" placeholder="# Describe your Campaign 
# Give an idea of how the content should look like 
# What is the key message that you want the influencers to promote"></textarea>
   </div>
</div>

<div class="d-flex justify-content-center">
   <button class="ra-btn ra-btn-dark-bg draft-btn fz15 fw-500" type="submit">Next</button>
</div>